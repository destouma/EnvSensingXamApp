<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnvSensingXamApp.Views.DevicesView"
             xmlns:i18n="clr-namespace:EnvSensingXamApp;assembly=EnvSensingXamApp"
             xmlns:controls="clr-namespace:EnvSensingXamApp;assembly=EnvSensingXamApp">
    <ContentView.Content>
        <StackLayout>
        <!-- Place new controls here -->
        <Label Text="{i18n:Translate Devices}"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />
        <ListView ItemsSource="{Binding Items}"
              CachingStrategy="RecycleElement"
              RowHeight="60">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Margin="8">
                            <Label Text="{Binding name}"
                               FontAttributes="Bold" />
                            <Label Text="{Binding uuid}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>        

        </ListView>

    </StackLayout>
    </ContentView.Content>
</ContentView>
