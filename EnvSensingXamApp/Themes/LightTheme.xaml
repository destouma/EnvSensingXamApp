<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnvSensingXamApp.Themes.LightTheme">

    <!-- Colors -->
    <Color x:Key="green">#2DBD70</Color>
    <Color x:Key="red">#FA5D68</Color>
    <Color x:Key="orange">#f5a623</Color>
    <Color x:Key="white">#FFFFFF</Color>
    <Color x:Key="black">#000000</Color>

    <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
    <Color x:Key="TopBarBackgroundColor">#5974A8</Color>
    <Color x:Key="SplashBackgroundColor">#5974A8</Color>
    
    <Color x:Key="ContentTextColor">#000000</Color>
    <Color x:Key="TobBarTextColor">#FFFFFF</Color>
    <Color x:Key="SplashTextColor">#FFFFFF</Color>


    <Color x:Key="Transparent">Transparent</Color>

     <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource TopBarBackgroundColor}"> </Setter>
        <Setter Property="BarTextColor" Value="{StaticResource TobBarTextColor}"></Setter>
    </Style>
 

</ResourceDictionary>
